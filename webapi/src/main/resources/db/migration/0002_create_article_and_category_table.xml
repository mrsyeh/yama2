<?xml version="1.0" encoding="UTF-8"?>

<databaseChangeLog xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-3.3.xsd">

	<property name="now" value="now()" dbms="mysql,h2" />
	<property name="now" value="current_timestamp" dbms="postgresql" />

	<changeSet id="0002" author="yama2showcase">
		<createTable tableName="yama2showcase_category">
			<column name="id" type="varchar(50)">
				<constraints primaryKey="true" nullable="false" />
			</column>
			<column name="create_by" type="varchar(50)" />
			<column name="create_date" type="datetime" />
			<column name="update_by" type="varchar(50)" />
			<column name="update_date" type="datetime" />
			<column name="active_flag" type="int(10)" />

			<column name="name" type="varchar(50)">
				<constraints unique="true" nullable="false" />
			</column>
			<column name="description" type="varchar(100)" />
			<column name="level" type="int(10)" />
		</createTable>

		<createTable tableName="yama2showcase_article">
			<column name="id" type="varchar(50)">
				<constraints primaryKey="true" nullable="false" />
			</column>
			<column name="create_by" type="varchar(50)" />
			<column name="create_date" type="datetime" />
			<column name="update_by" type="varchar(50)" />
			<column name="update_date" type="datetime" />
			<column name="active_flag" type="int(10)" />

			<column name="author_id" type="varchar(50)">
				<constraints nullable="false" />
			</column>
			<column name="category_id" type="varchar(50)" />
			<column name="content" type="longtext">
				<constraints nullable="false" />
			</column>
			<column name="summary" type="varchar(150)" />
			<column name="post_date" type="datetime" />
			<column name="status" type="varchar(50)" />
			<column name="title" type="varchar(100)">
				<constraints nullable="false" />
			</column>
		</createTable>

		<addForeignKeyConstraint constraintName="fk_article_category_id"
			baseTableName="yama2showcase_article" baseColumnNames="category_id"
			referencedTableName="yama2showcase_category" referencedColumnNames="id" />
		
		<addDefaultValue tableName="yama2showcase_category" columnName="level"
			defaultValueNumeric="0" />
		
		<loadData tableName="yama2showcase_category" file="db/categories.csv"
			encoding="UTF-8" separator=";" />
	</changeSet>
</databaseChangeLog>
